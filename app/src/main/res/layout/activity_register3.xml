<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.earlybro_daeguen.myapplication.RegisterActivity3"
    android:background="@drawable/login_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <ImageView
            android:id="@+id/shopImage"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <EditText
            android:id="@+id/shopTelText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/border4"
            android:hint=" 매장 전화번호"
            android:inputType="phone"
            android:paddingLeft="15dp"

            />

        <EditText
            android:id="@+id/shopInfoText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border4"
            android:hint=" 매장 소개글"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:layout_marginBottom="15dp"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                >
                <Button
                    android:id="@+id/BusinessImgLoad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:onClick="LoadImg2"
                    android:layout_gravity="left"
                    android:background="@drawable/login2"
                    android:textColor="@color/white"
                    android:text="가게 이미지" />

                <Button
                    android:id="@+id/NextBt2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:onClick="Registerdata"
                    android:layout_gravity="right"
                    android:background="@drawable/login3"
                    android:textColor="@color/white"
                    android:text="가입완료"
                    />

            </LinearLayout>
        </FrameLayout>



    </LinearLayout>
</FrameLayout>
